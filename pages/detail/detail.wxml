  </view>
  <view class="form-item">
    <text>訂單號：</text>
    <input type="number" value="{{itemData.SO}}" disabled="true"/>
  </view>
  <view class="form-item">
    <text>客戶代碼：</text>
    <input type="number" value="{{itemData.CUST_CODE}}" disabled="true"/>
  </view>
  <view class="form-item">
    <text>創建時間：</text>
    <input type="number" value="{{itemData.trans_date}}" disabled="true"/>
  </view>
  <view class="form-item">
    <text>更新時間：</text>
    <input type="number" value="{{itemData. update_date}}" disabled="true"/>
  </view>
</view>