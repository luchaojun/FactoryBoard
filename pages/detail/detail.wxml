<view class="container">
  <view class="form-item">
    <text>製程：</text>
    <input type="text" value="{{itemData.plan_name}}" disabled="true"/>
  </view>
  <view class="form-item">
    <text>線別：</text>
    <input type="text" value="{{itemData.linename}}" disabled="true"/>
  </view>
  <view class="form-item">
    <text>線別名稱：</text>
    <input type="number"  value="{{itemData.prod_line}}" disabled="true"/>
  </view>
  <view class="form-item">
    <text>排程日期：</text>
    <input type="number"  value="{{itemData.sch_date}}" disabled="true"/>
  </view>
  <view class="form-item">
    <text>製令：</text>
    <input type="number"  value="{{itemData.wip_entity_name}}" disabled="true"/>
  </view>
  <view class="form-item">
    <text>製令總數：</text>
    <input type="number"  value="{{itemData.QUANTITY}}" disabled="true"/>
