.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.form-item text {
  width: 120px;
}

.form-item input {
  flex: 1;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 5px;
}

.picker {
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 5px;
}

button {
  background-color: #1AAD19;
  color: white;
  border-radius: 4px;
  padding: 10px 20px;
  margin-top: 20px;
}
